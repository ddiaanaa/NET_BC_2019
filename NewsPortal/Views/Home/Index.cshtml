@model List<NewsPortalLogic.New>
@{
    ViewData["Title"] = "Home Page";
}
<h3>Jaunākās ziņas</h3>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="thumbnail">
                    <p>
                        <img src="@item.Photo" alt="Latest news" style="width:100%">
                        <div class="caption">
                            <a asp-action="Index" asp-controller="News" asp-route-id="@item.Id">@item.Title</a>
                        </div>
                    </p>
                </div>
            </div>           
        }
     </div>
       