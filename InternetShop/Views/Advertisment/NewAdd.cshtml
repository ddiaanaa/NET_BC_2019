@model AdModel
@{
    ViewData["Title"] = "Jauns sludinājums";
}
    <div class="container">
        <h2>Jauns sludinājums</h2>
        <form class="form-horizontal" action="NewAdd" method="post">@* ieliekam šet uz  *@
            <div class="form-group">
                    <label class="control-label col-sm-2">Kategorija: </label>
                    <div class="col-sm-10">
                        <select  class="form-control"asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "Title"))"></select>
                    </div>
                </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Cena: </label>
                <div class="col-sm-10">
                    <input asp-for="Price"class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" >Atrašanās vieta: </label>
                <div class="col-sm-10">
                    <input tclass="form-control" asp-for="Location">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" >Tālrunis: </label>
                <div class="col-sm-10">
                    <input asp-for="Telephone" class="form-control"/>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" >E-pasts: </label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Email">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" >Apraksts: </label>
                <div class="col-sm-10">
                    <textarea class="form-control" asp-for="Description"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="pwd">Pievienot foto: </label>
                <div class="col-sm-10">
                    <input asp-for="Photo" class="form-control" >
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Saglabāt sludinājumu</button>
                </div>
            </div>
        </form>
    </div>

