@model List<LogicInternetveikals.Category>
@{
    ViewData["Title"] = "Home Page";
}

    <div class="container">
        @if (Context.Session.GetUserEmail() != null)
        {
        <div class="row">
            <div class="col-md-12" role="group" aria-label="...">
