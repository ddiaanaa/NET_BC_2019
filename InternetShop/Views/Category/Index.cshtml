                    <a type="button" class="btn btn-default" asp-controller="Advertisment" asp-action="NewAdd">Pievienot sludinājumu</a>

                </p>

            </div>
        </div>  
        }
        <br />
        <div class="row">

            @foreach (var category in Model.Where(c => !c.CategoryId.HasValue))
            {
                <div class="list-group col-md-3">
                    <a href="#" class="list-group-item active">@category.Title</a>

                    @foreach (var subcategory in Model.FindAll(c => c.CategoryId == category.Id))
                    {
                        <a class="list-group-item" asp-controller="Advertisment" asp-action="Index"asp-route-id="@subcategory.Id">@subcategory.Title<span class="badge navbar-right">@subcategory.AdvertismentCount</span></a>
                    }
                </div>
            }
